    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "leftValue": "={{ $json.alert_level }}",
              "rightValue": "NORMAL",
              "operator": {
                "type": "string",
                "operation": "notEquals"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "if-significant",
      "name": "If Significant Change",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [660, 0]
    },
    {
      "parameters": {
        "jsCode": "const data = $input.first().json;\nconst direction = data.day_change >= 0 ? 'gained' : 'lost';\nconst emoji = data.day_change >= 0 ? 'ðŸ“ˆ' : 'ðŸ“‰';\n\nreturn [{\n  json: {\n    subject: `${emoji} Portfolio Alert: ${data.alert_level} Change`,\n    message: `Your portfolio ${direction} $${Math.abs(data.day_change).toFixed(2)} (${data.day_change_pct}%) today.\\n\\nCurrent Value: $${data.total_value.toFixed(2)}\\nAlert Level: ${data.alert_level}`,\n    alert_level: data.alert_level,\n    day_change: data.day_change,\n    day_change_pct: data.day_change_pct,\n    total_value: data.total_value\n  }\n}];"
      },
      "id": "format-alert",
      "name": "Format Alert Message",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [880, -100]
    },
    {
      "parameters": {},
      "id": "no-action",
      "name": "No Action Needed",
      "type": "n8n-nodes-base.noOp",
      "typeVersion": 1,
      "position": [880, 100]
    }
